<h1>{{title}}</h1>
<br>
<form name="main" action="done" onsubmit="return validate()" method="post" enctype="multipart/form-data">

  <div class="row">
    <div class="three columns offset-by-three right-text">
      Email :
    </div>
    <div class="three columns">
      <input type="text" name="userName" value="">
    </div>
  </div>

  <div class="row">
    <div class="three columns offset-by-three right-text">
      Password :
    </div>
    <div class="three columns">
      <input type="password" name="pass" value="">
    </div>
  </div>

  <div class="row">
    <div class="three columns offset-by-three right-text">
      Type your Password again:
    </div>
    <div class="three columns">
      <input type="password" name="pass_repeat" value="">
    </div>
  </div>

<input class="margin_button button-primary" type="submit" name="GetStarted" value="Signup"><br>
</form>

